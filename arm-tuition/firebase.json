{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],        
        "frameworksBackend": {
            "region": "us-central1"
        }
    },
    "firestore": {
        "database": "default",
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run lint",
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ]
    },
    "ignore": [
        ".git",
        ".runtimeconfig.json",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "node_modules"
    ]
}